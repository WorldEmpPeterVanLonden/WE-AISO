rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isProjectOwner(projectId) {
      return get(/databases/$(database)/documents/projects/$(projectId)).data.owner == request.auth.uid;
    }

    // Secure all paths by default
    match /{document=**} {
      allow read, write: if false;
    }
    
    // User profiles can be read by anyone but only written by the owner
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    // Projects can be read by anyone signed in, but only created, updated, or deleted by the owner.
    match /projects/{projectId} {
      allow read: if isSignedIn() && isProjectOwner(projectId);
      allow create: if isSignedIn() && request.resource.data.owner == request.auth.uid;
      allow update, delete: if isSignedIn() && isProjectOwner(projectId);
      
      // Allow project owner to write to subcollections.
      // This rule is for all subcollections EXCEPT basicInfo on create.
      match /{subcollection}/{docId} {
        allow read, write: if isSignedIn() && isProjectOwner(projectId);
      }

      // Explicitly allow creating the initial basicInfo document
      // as long as the user is the owner of the parent project being created.
      match /basicInfo/{docId} {
         allow create: if isSignedIn() && request.resource.data.owner == request.auth.uid;
         allow read, update, delete: if isSignedIn() && isProjectOwner(projectId);
      }
    }
  }
}
