rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Secure all paths by default
    match /{document=**} {
      allow read, write: if false;
    }
    
    // User profiles can be read by anyone but only written by the owner
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    // Projects and their subcollections can be read and written by the owner
    match /projects/{projectId} {
      allow read, write: if isSignedIn() && resource.data.owner == request.auth.uid;
      
      match /{allChildren=**} {
        allow read, write: if isSignedIn() && get(/databases/$(database)/documents/projects/$(projectId)).data.owner == request.auth.uid;
      }
    }
  }
}
