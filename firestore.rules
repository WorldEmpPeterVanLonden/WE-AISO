rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isProjectOwner(projectId) {
      return get(/databases/$(database)/documents/projects/$(projectId)).data.owner == request.auth.uid;
    }

    // Secure all paths by default
    match /{document=**} {
      allow read, write: if false;
    }
    
    // User profiles can be read by anyone but only written by the owner
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    // Projects can be read by anyone signed in, but only created, updated, or deleted by the owner.
    match /projects/{projectId} {
      allow read: if isSignedIn() && isProjectOwner(projectId);
      allow create: if isSignedIn() && request.resource.data.owner == request.auth.uid;
      allow update, delete: if isSignedIn() && isProjectOwner(projectId);
      
      // Subcollections of projects can be read and written by the project owner.
      match /{allChildren=**} {
        allow read, write: if isSignedIn() && isProjectOwner(projectId);
      }
    }
  }
}
